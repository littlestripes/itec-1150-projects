# Initialize variables
number_of_cds = 45
number_of_lps = 23
number_of_albums = number_of_cds + number_of_lps

# Display information in a user-friendly format
print(f"With {number_of_cds} CDs and {number_of_lps} LPs, you have {number_of_albums}.")
